[user]
	name = Marsup
	email = marsup@gmail.com

[color]
	ui = auto

[core]
	editor = vim
        excludesfile = ~/.gitignore
	autocrlf = input
	gitProxy = gitproxy

[branch]
	autosetuprebase = always

[alias]
	aliases = "!git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'"

	# Simple aliases
	c = commit
	co = checkout
	st = status
	s = stash

	# Commit stuff
        ca = commit -a
	cf = commit --fixup=HEAD
	caf = commit -a --fixup=HEAD
	cs = commit -e --squash=HEAD
	cas = commit -ea --squash=HEAD
	amend = commit --amend
	ai = add -i
	unadd = rm -r --cached

	# Diff stuff 
	in = "!git remote update -p; git log ..@{u}"
	out = log @{u}..
	din = "!git remote update -p; git log ..@{u} -p"
	dout = log @{u}.. -p
        d = diff -b 
	ds = "!git d --cached"

	# Tree navigation
        glog = log --oneline --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
        glogg = "!git glog --branches --remotes"
        glogs = "!git glog --stat"
        gloggs = "!git glogg --stat"

	# Branch stuff
	ri = rebase -i --autosquash
	undo = reset --soft HEAD^
	track = checkout -t 

	# Some tools
	h = rev-list --max-count=1 HEAD
	stats = "!git log --format='%C(bold blue)%aN%Creset <%C(yellow)%aE%Creset>' | awk '{arr[$0]++} END{for (i in arr){print arr[i], i;}}' | sort -rn"
	gstats = "!git log --branches --format='%C(bold blue)%aN%Creset <%C(yellow)%aE%Creset>' | awk '{arr[$0]++} END{for (i in arr){print arr[i], i;}}' | sort -rn"
	root = rev-parse --show-cdup
	pack = "!git archive HEAD --format=tar | gzip > ./`git h`.tar.gz"
	ignore= "!([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore"

[push]
	default = tracking

[rerere]
	enabled = 1

[help]
	autocorrect = 1
